<lynx>
	<application>
		<access-logs s="./var/access.log" />
		<error-logs s="./var/error.log" />
		<trace-logs s="./var/trace.log" />
		<task-workers-count i="4" />
		<event-workers-count i="4" />
		<force-quit b="false" />
		<terminal b="true" />
	</application>
	<listen s="*">
		<hostname s="127.0.0.1" />
		<port i="80" />
	</listen>
	<site s="*">
		<resource-root s="./tmp/" />
		<keep-alive i="10" />
		<host s="*" />
		<route s="/">
			<compression>
				<quality-level i="8" />
				<memory-level i="8" />
				<min-length i="8192" />
				<enabled i="false" />
			</compression>
			<document-root s="./web" />
			<allow-directory-listing b="true" />
		</route>
	</site>
</lynx>

<lynx>
	<application>
		<access-logs s="./var/access.log.gz" />
		<error-logs s="./var/error.log.gz" />
		<trace-logs s="./var/trace.log.gz" />
		<show-terminal b="true" />
		<log-requests b="true" />
	</application>
	<listen s="*">
		<hostname s="127.0.0.1" />
		<port i="8080" />
	</listen>
	<site s="*">
		<resource-root s="./tmp/" />
		<group name="static">
			<route s="/">
				<document-root s="./web" />
				<allow-directory-listing b="true" />
			</route>
		</group>
	</site>
</lynx>

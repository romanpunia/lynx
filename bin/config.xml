<lynx>
	<application>
		<access-logs s="./var/access.log" />
		<error-logs s="./var/error.log" />
		<trace-logs s="./var/trace.log" />
		<show-terminal b="true" />
		<log-requests b="true" />
	</application>
	<listen s="*">
		<hostname s="0.0.0.0" />
		<port i="25565" />
	</listen>
	<site s="*">
		<resource-root s="./tmp/" />
		<group name="static">
			<route s="/">
				<document-root s="./web" />
				<allow-directory-listing b="true" />
			</route>
		</group>
	</site>
</lynx>

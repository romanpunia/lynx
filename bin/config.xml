<lynx>
	<application>
		<access-logs s="./var/access.log" />
		<error-logs s="./var/error.log" />
		<trace-logs s="./var/trace.log" />
		<force-quit b="false" />
		<terminal b="true" />
        <threads i="4" />
	</application>
	<netstat>
		<keep-alive i="10" />
		<enable-no-delay b="true" />
	</netstat>
	<listen s="*">
		<hostname s="127.0.0.1" />
		<port i="8080" />
	</listen>
	<site s="*">
		<resource-root s="./tmp/" />
		<group name="static">
			<route s="/">
				<document-root s="./" />
				<allow-directory-listing b="true" />
			</route>
		</group>
	</site>
</lynx>
